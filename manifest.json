{
  "manifest_version": 2,

  "name": "DQX フレンドオンラインステータス",
  "short_name": "dq10onst",
  "description": "目覚めし冒険者の広場からオンラインのフレンドをピックアップ表示します。",
  "version": "1.0",
  "minimum_chrome_version": "38",

  "background" : {
    "scripts": ["background.js"],
    "persistent": false
  },

  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "declarativeContent",
    "http://hiroba.dqx.jp/"
  ]
}